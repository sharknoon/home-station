// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/app/data/db.sqlite"
}

model System {
  id               Int     @id @default(autoincrement())
  setupComplete    Boolean @default(false)
  currentSetupStep Int     @default(0)
}

model ContainerEngine {
  id         Int     @id @default(autoincrement())
  name       String  @unique
  type       String // "local" or "remote"
  socketPath String? // Only when type is "local"
  host       String? // Only when type is "remote"
  ca         String? // Only when type is "remote"
  cert       String? // Only when type is "remote"
  key        String? // Only when type is "remote"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
