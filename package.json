        "@sveltejs/kit": "^2.5.0",
        "@sveltejs/vite-plugin-svelte": "^3.0.2",
        "@tailwindcss/forms": "^0.5.7",
        "@types/bcrypt": "^5.0.2",
        "@types/better-sqlite3": "^7.6.9",
        "@types/dockerode": "^3.3.23",
        "@types/eslint": "8.56.2",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.11.16",
        "@types/nodegit": "^0.28.7",
