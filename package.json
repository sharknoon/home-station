        "i18next-parser": "^8.12.0",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "prettier-plugin-svelte": "^3.1.2",
        "svelte": "^4.2.10",
        "svelte-check": "^3.6.3",
        "tailwindcss": "^3.4.1",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3",
        "vite": "^5.0.12",
        "vitest": "^1.2.2"
